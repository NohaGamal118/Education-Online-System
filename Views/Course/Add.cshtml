@model Course
@{
    Layout = "_AddandEditLayout";
    var deptss = ViewBag.depts;
    SelectList deptsList = new SelectList(deptss, "Id", "Name");
   
}

<h2>Add New Course</h2>
<form method="post" asp-action="Add" asp-controller="Course">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Degree"></label>
        <input asp-for="Degree"  class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MinDegree"></label>
        <input asp-for="MinDegree" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" asp-items="deptsList" class="form-control">
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</form>